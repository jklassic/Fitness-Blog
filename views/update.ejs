<%- include('./partials/head.ejs') %> 

<body>
    <%- include ('./partials/nav.ejs') %>     
    <div class="create-blog content">
        <form action="/blogs/<%= blog._id%>?_method=PUT" method="post">
            
            <label for="title">Blog title:</label>
            <input type="text" placeholder="Blog Title" name="title" id="title" required>

            <label for="snippet">Blog Snippet:</label>
            <input type="text" name="snippet" id="snippet" placeholder="Blog Snippet" required>

            <label for="body">Blog Body:</label>
            <textarea name="body" id="body" placeholder="Blog body" required></textarea>

            <button>Submit</button>
        </form>   
    </div>
    <%- include('./partials/footer.ejs') %> 
</body>
</html>
